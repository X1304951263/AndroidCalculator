<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#D8ECF3">



    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="147dp"
        android:layout_marginTop="10dp">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_height="180dp"
            android:gravity="center"
            android:singleLine="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="bottom|left"
            android:singleLine="true"
           />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal"
            android:singleLine="true"
            android:textSize="20dp"
            android:id="@+id/text1"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp">

        <Spinner
            android:id="@+id/spinner2"
            android:singleLine="true"
            android:layout_height="180dp" />

        <TextView
            android:singleLine="true"
            android:layout_width="102dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal"
            android:singleLine="true"
            android:textSize="20dp"
            android:text=""
            android:id="@+id/text2"/>

    </TableRow>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/a"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="A"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="b"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_c"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="c"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_d"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_span="1"
            android:gravity="center"
            android:text="d"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/b7"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="7"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b8"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="8"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b9"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="9"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_e"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_span="1"
            android:gravity="center"
            android:text="e"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/b4"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="4"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b5"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="5"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b6"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="6"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_f"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:text="f"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/b1"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b2"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="2"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b3"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="3"
            android:textSize="25sp" />

        <Button
            android:id="@+id/c"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:text="clean"
            android:textSize="25sp" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/b0"
            android:layout_marginLeft="10dp"
            android:layout_span="1"

            android:gravity="center"
            android:text="0"
            android:textSize="25sp" />

        <Button
            android:id="@+id/dian"
            android:layout_marginLeft="10dp"
            android:layout_span="1"

            android:gravity="center"
            android:text="."
            android:textSize="25sp" />

        <Button
            android:id="@+id/deng"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"


            android:gravity="center"
            android:text="="
            android:textSize="25sp" />

        <Button
            android:id="@+id/bd"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="del"
            android:textSize="25sp" />


    </TableRow>


</TableLayout>