<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#D8ECF3">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:gravity="bottom|right"
        android:singleLine="true"

        android:textSize="50dp" />



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="102dp"

            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="菜单"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_clean"
            android:layout_width="110dp"

            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="c"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="112dp"

            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="del"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_jin"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="进制"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_danwei"
            android:layout_width="109dp"

            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="单位"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_cifang"
            android:layout_width="wrap_content"

            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="x^y"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_sin"
            android:layout_width="111dp"

            android:layout_height="match_parent"

            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="sin"
            android:textSize="25sp" />


    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_cos"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Cos"
            android:textSize="25sp" />

        <Button
            android:id="@+id/zuo"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="("
            android:textSize="25sp" />

        <Button
            android:id="@+id/you"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text=")"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_jia"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"

            android:layout_span="1"
            android:gravity="center"
            android:text="+"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_jian"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="-"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_cheng"
            android:layout_marginLeft="10dp"


            android:gravity="center"
            android:text="*"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_chu"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="÷"
            android:textSize="25sp" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_1"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="2"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="3"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_4"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="4"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_marginLeft="10dp"
            android:layout_span="1"

            android:gravity="center"
            android:text="0"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_point"
            android:layout_marginLeft="10dp"
            android:layout_span="1"

            android:gravity="center"
            android:text="."
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_5"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="5"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="6"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_7"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="7"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="8"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_marginLeft="10dp"

            android:gravity="center"
            android:text="9"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"


            android:gravity="center"
            android:text="="
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


    </TableRow>


</TableLayout>